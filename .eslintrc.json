{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": [ "error", "never" ],
    "arrow-parens": 0,
    "max-len": ["error", { "code": 150 }],
    "indent": ["error", 2]
  }
}